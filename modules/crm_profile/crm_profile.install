<?php// $Id$/** * @file * * The install file for CRM profile module */ /** * Implements hook_install(). */function crm_profile_install() {  //Create a relation type  $relation_type = array(    'relation_type' => 'individual_party',    'label' => 'Individual',    'max_arity' => 400,    'source_bundles' => array(      'profile2:*',      'user:*',    ),  );    relation_type_create($relation_type); }