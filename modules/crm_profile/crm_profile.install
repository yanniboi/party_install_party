<?php// $Id$/** * @file * * The install file for CRM profile module */ /** * Implements hook_install(). */function crm_profile_install() {  //Create a relation type  $relation_type = array(    'relation_type' => 'party_to_profile2',    'label' => 'Party to Profile',    'max_arity' => 2,    'source_bundles' => array(      'crm_party:*',      'profile2:*',    ),  );    relation_type_save($relation_type);   drupal_set_message("Party to Profile Created"); }